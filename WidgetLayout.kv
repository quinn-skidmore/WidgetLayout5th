<BoxLayoutExample>:
    orientation: "vertical"
    BoxLayout:
        Button:
            text: "Add Button"
            color: 1, 1, 0, 1
            background_color: 200, 0, 255, 1
            on_press: root.add_button()
        Button:
            text: "Remove Button"
            color: 0, 1, 0, 1
            background_color: 255, 0, 0, 1
            on_press: root.remove_button()


