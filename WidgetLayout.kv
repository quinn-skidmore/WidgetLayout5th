<BoxLayoutExample>:
    orientation: "vertical"
    BoxLayout:
        Button:
            text: "Add Button"
            color: 1, 1, 0, 1
            background_color: 200, 0, 255, 1
            on_press: root.add_button()
        Button:
            text: "Remove Button"
            color: 0, 1, 0, 1
            background_color: 255, 0, 0, 1
            on_press: root.remove_button()
    NewButtonLayout:
        id: new


<MainWidget>:
    Button:
        text: "cool button"
        size: "100dp", "60dp"
        pos: "100dp","100dp"
        on_press: root.add_button()
        on_release: print("no more button :(")

    Button:
        text: "less cool button"
        size: "50dp", "30dp"
        pos: "100dp","520dp"

    Label:
        text: "<-- cool button"
        pos: "250dp","100dp"
        color: 1, 0, 0, 1
    Label:
        text: "<-- less cool button"
        pos: "250dp","500dp"
        color: 1, 0, 1, 1